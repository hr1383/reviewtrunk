<!DOCTYPE html>
<html>
  <head>
    <title>Reviewtrunk</title>
    <%= csrf_meta_tags %>
    <link href="<%= image_path("favicon.ico") %>" rel="shortcut icon" />
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>    
  </head>

  <body id="top">
  <%=render template: 'layouts/dashboard-header'%>  
  <div class="bg-img u-h-90vh u-flex-center" style="padding-top: 20px">  
    	<div class="container">
    		<div class="bg_opacity" style="padding-top:50px">
            <div class="row">
              <% flash.each do |key, value| %>
                <div class="alert alert-<%= key %>">
                  <div class="flash_msg"><%= value %></div>
                </div>
              <% end %>
            </div>
             <%= yield :top_content %>
            <%= yield %>
        </div>
      </div>
  </div>
  <%=render template: 'layouts/footer'%>
</body>
</html>
