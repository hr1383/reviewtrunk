<div class="login_sctions">
	<h1 style="margin-top: 0px;"><span>Welcome back!</span></h1>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
     	<div class="row">
     		<div class="col-sm-10 col-sm-offset-1">
                <%= f.email_field :email, autofocus: true, placeholder: "Email"%>
     		</div>
     	</div>
     	<div class="row" style="margin-top: 30px;">
     		<div class="col-sm-10 col-sm-offset-1">
                <%= f.password_field :password, autocomplete: "off", placeholder: "Password"%>
     		</div>
     	</div>
     	<div class="row">
     		<div class="col-sm-5 col-xs-6 col-sm-offset-1">
                <p><%= f.check_box :remember_me,class: "remember-label" %>
                <%= f.label :remember_me, class: "remember_part" %></p>
     		</div>
     		<div class="col-sm-6 col-xs-6">
                
     			<p class="forgot-link"><%= link_to "Forgot your password?", new_password_path(resource_name) %><br /></p>
     		</div>
     	</div>
        <p class="submit"><%= f.submit "Log in", class: "button button_btn blue" %></p>
     	<!-- <button class="button button_btn blue" type="submit"><span>Sign in to your account</span></button></p> -->
    <%end%>
</div>
